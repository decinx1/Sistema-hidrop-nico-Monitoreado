   <string notr="true">/* === QTableView === */
QTableView {
    background-color: rgb(245, 245, 245); /* Color claro y suave similar al blanco */
    border: none;
    font-size: 16px;
    selection-background-color: rgb(220, 220, 220); /* Gris suave para la selección */
    border-radius: 8px;
    color: #333333;
}
QTableView::item {
    padding: 8px;
    border-radius: 6px;
    margin: 2px;
}
QTableView::item:selected {
    background-color: rgb(200, 200, 200); /* Gris más claro */
    color: black;
}

/* === QHeaderView === */
QHeaderView::section {
    background-color: #66bb6a; /* Verde más brillante y fresco para el header */
    color: white;
    font-weight: bold;
    padding: 8px;
    border: none;
    border-radius: 12px;
    margin: 1px;
}
QHeaderView::section:horizontal {
    background-color: #1e73c1; /* Azul suave para los nombres de las columnas */
    color: white;
    font-weight: bold;
}

/* === QScrollBar === */
QScrollBar:vertical {
    background-color: #f0f0f0;
    width: 10px;
    border-radius: 5px;
}
QScrollBar::handle:vertical {
    background-color: #8cc63f;
    border-radius: 5px;
}
QScrollBar::handle:vertical:hover {
    background-color: #7ab62e;
}

/* === QDialog === */
QDialog {
    background-color: #ffffff; /* Blanco limpio */
    border: 2px solid #1e73c1; /* Azul suave para el borde */
    border-radius: 20px; /* Bordes redondeados */
    padding: 30px; /* Más padding para un espaciado más limpio */
}

/* === Modal title bar === */
QDialog QWidget#titleBar {
    background-color: #66bb6a; /* Verde brillante para el encabezado */
    color: white;
    border-top-left-radius: 20px; /* Redondeo de los bordes */
    border-top-right-radius: 20px;
    padding: 20px; /* Padding ajustado */
    font-size: 20px; /* Título más grande */
    font-weight: bold;
    text-align: center;
}

/* === Modal content === */
QDialog QWidget#contentWidget {
    background-color: #f9f9f9; /* Gris claro para el contenido */
    border-radius: 15px; /* Bordes redondeados */
    margin: 20px;
    padding: 25px; /* Más padding para no verse comprimido */
}

QDialog QLabel {
    font-size: 18px; /* Tamaño de fuente ajustado */
    color: #333333;
    padding: 10px;
}
QDialog QLabel#sectionTitle {
    font-size: 20px;
    font-weight: bold;
    color: #1e73c1; /* Azul para los títulos de sección */
    padding: 10px 0;
}
QDialog QLabel#valueLabel {
    font-size: 16px;
    color: #444444;
    background-color: #e6f7ff; /* Fondo sutil azul claro */
    border-radius: 8px;
    padding: 12px;
    margin-top: 10px;
}

/* === Buttons === */
QDialog QPushButton {
    background-color: #1e73c1; /* Azul suave para los botones */
    color: white;
    border: none;
    border-radius: 12px; /* Bordes más redondeados */
    padding: 12px 25px;
    font-size: 16px;
    font-weight: bold;
    margin-top: 20px;
}
QDialog QPushButton:hover {
    background-color: #176ba3;
}
QDialog QPushButton:pressed {
    background-color: #135e8e;
}
QDialog QPushButton#closeButton {
    background-color: #00aeef; /* Color brillante para el botón de cierre */
    color: white;
}
QDialog QPushButton#closeButton:hover {
    background-color: #0099cc;
}

/* === Separators and graphs === */
QDialog QFrame#separator {
    background-color: #e0e0e0;
    max-height: 1px;
    margin: 15px 0;
}
QDialog QFrame#graphFrame {
    background-color: white;
    border: 1px solid #e0e0e0;
    border-radius: 15px;
    padding: 20px;
}
